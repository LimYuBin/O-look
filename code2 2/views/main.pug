doctype html
html
  include main_header.pug

body
  .content
    if user_name
      .user_name #{user_name}  님에게 추천드립니다!
    .box1
      for main in mains
        .wrap
          .item
            img#img(src= main.img, alt='' value=main.img)
            figcaption
              h3#id(value=main.id type=hidden)
              h3#brand(value=main.brand) #{main.brand}
              p#title(value=main.title) #{main.title}
              p#like_cnt(value=main.like_cnt) 좋아요: #{main.like_cnt}
            a#item_url(href=main.item_url target='_blank' value=main.item_url)
          button.zzimBtn
            img#heart(src="/images/icon/zzim.png", alt="" width='20px')

    span.text 인기있는 옷

    .box2
      .item
        button.zzimBtn
          img#heart(src="/images/icon/zzim.png", alt="" width='20px')

    a.toTop(href='#')
      img.toTopImg(src="/images/icon/top.png", alt="" width='32px')

include main_footer.pug

script(src='https://unpkg.com/axios/dist/axios.min.js')
